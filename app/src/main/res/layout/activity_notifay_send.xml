<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:background="#6C037E"
    tools:context = ".NotifaySend">

  <androidx.cardview.widget.CardView
      android:layout_width = "match_parent"
      android:layout_height = "wrap_content"
      android:layout_margin = "10dp"
      android:elevation = "10dp"

      app:cardCornerRadius = "10dp"
      app:layout_constraintBottom_toBottomOf = "parent"
      app:layout_constraintEnd_toEndOf = "parent"
      app:layout_constraintTop_toTopOf = "parent">

    <ScrollView
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"><LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"

        android:orientation = "vertical">
            <EditText
                android:id = "@+id/edit_noty"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:gravity = "center"
                android:hint = "ادخل الرسالة"
                android:inputType = "textMultiLine"
                android:textSize = "20sp" />
      <View
          android:id = "@+id/view2"
          android:layout_width = "match_parent"
          android:layout_height = "40dp" /><Button
        android:id = "@+id/button8"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:onClick = "Send"
        android:text = "ارسال" /></LinearLayout></ScrollView></androidx.cardview.widget.CardView></androidx.constraintlayout.widget.ConstraintLayout>